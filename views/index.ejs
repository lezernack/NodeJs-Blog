  <p class="author_body">Web Developer and Student</p>
</div>

<img src="img/apple.jpeg" alt="apple(or is it?)" />

<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>

  <!-- Dummy data displayed until we include posts later on -->
  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span> <%= post.title %> </span>
        <span class="article-list_date">
          <% post.createdAt.toDateString() %>
        </span>
      </a>
    </li>
    <%}); %>
  </ul>

  <% if(nextPage !== null) { %>
  <a href="a" class="pagination"> &lt; View Older Posts </a>
  <% } %>

  <!-- if prevPage is 1 then go to / -->
  <% if(prevPage >= 1) { %> <% if(prevPage === 1) { %>
  <a href="/" class="pagination-newpage">View Newer Posts &gt;</a>
  <% } else { %>
  <a href="/?page=<%= prevPage  %>" class="pagination-newpage"
    >View Newer Posts &gt;</a
  >
  <% } %> <% } %>
</section>
